{
  "tasks": {
    "build": "deno compile --check --allow-read --allow-env --allow-net --allow-ffi --output dist/main main.ts",
    "dev": "deno run --watch --allow-read --allow-env --allow-net --allow-sys main.ts",
    "prisma:generate": "deno run --allow-all prisma generate",
    "prisma:seed": "deno run --allow-all ./prisma/seed.ts",
    "prisma:migrate": "deno run --allow-all prisma migrate deploy"
  },
  "imports": {
    "@nestjs/common": "npm:@nestjs/common@^11.1.9",
    "@nestjs/core": "npm:@nestjs/core@^11.1.9",
    "@nestjs/platform-express": "npm:@nestjs/platform-express@^11.1.9",
    "@nestjs/swagger": "npm:@nestjs/swagger@^11.2.3",
    "@prisma/adapter-pg": "npm:@prisma/adapter-pg@^7.0.0",
    "@prisma/client": "npm:@prisma/client@^7.0.0",
    "@prisma/extension-accelerate": "npm:@prisma/extension-accelerate@^3.0.0",
    "@std/assert": "jsr:@std/assert@1.0.16",
    "class-transformer": "npm:class-transformer@^0.5.1",
    "class-validator": "npm:class-validator@^0.14.2",
    "dotenv": "npm:dotenv@^17.2.3",
    "dotenv-cli": "npm:dotenv-cli@^11.0.0",
    "pg": "npm:pg@^8.16.3",
    "prisma": "npm:prisma@^7.0.0"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "workspace": ["./libs/prisma"],
  "fmt": {
    "exclude": ["./libs/prisma/generated"],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": false,
    "semiColons": true,
    "useBraces": "always",
    "trailingCommas": "onlyMultiLine",
    "bracePosition": "sameLine"
  },
  "lint": {
    "exclude": ["./libs/prisma/generated"]
  }
}
